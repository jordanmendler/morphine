{
	"manifest_version": 2,
	"name": "Morphine",
	"version": "1.1.4",
	"description": "Regulated distraction.",
	"icons": {
		"16": "images/icons/16.png",
		"128": "images/icons/128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "images/icons/19-1x.png",
			"38": "images/icons/19-2x.png"
		},
		"default_title": "Morphine",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["scripts/errors.js", "scripts/Uri.js", "scripts/data.js", "scripts/background.js"]
	},

	"content_security_policy": "script-src 'self'; object-src 'self'",

	"options_ui": {
		"chrome_style": false,
		"page": "options.html"
	},
	"permissions": ["tabs","storage"],
	"web_accessible_resources": ["popup.html"],

	"browser_specific_settings": {
		"gecko": {
		  "id": "{b252db54-e4f6-440f-914a-1f017a3a390d}"
		}
	  }
	  
}
